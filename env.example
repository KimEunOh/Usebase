# Development Environment
NODE_ENV=development

# Monorepo Configuration
TURBO_TEAM=your_turbo_team
TURBO_TOKEN=your_turbo_token

# Database URLs
DATABASE_URL=postgresql://postgres:password@localhost:5432/usebase
SHADOW_DATABASE_URL=postgresql://postgres:password@localhost:5432/usebase_shadow

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_URL=localhost:9092

# External Services
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI APIs
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
COHERE_API_KEY=your_cohere_api_key

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=usebase-uploads

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_OCR=true
ENABLE_VECTOR_SEARCH=true
ENABLE_AI_CHAT=true
ENABLE_BILLING=true 